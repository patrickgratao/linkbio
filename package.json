{
  "name": "boilerplate-vite-tailwind",
  "description": "Este é um boilerplate com Vite, React 18, TypeScript, Vitest, Testing Library, TailwindCSS 3 and biome",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "author": {
    "name": "Patrick Gratão",
    "email": "ppgratao@gmail.com",
    "url": "https://www.linkedin.com/in/patrickgratao"
  },
  "scripts": {
    "dev": "vite",
    "dev2": "vite --port 3002",
    "start": "vite",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "biome check --write src",
    "format": "biome format --write src",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "prepare": "husky"
  },
  "dependencies": {
    "@material-tailwind/react": "^2.1.7",
    "axios": "^1.6.2",
    "daisyui": "^4.4.20",
    "jwt-decode": "^3.1.2",
    "react": "^18.2.0",
    "react-bootstrap": "^2.9.1",
    "react-daisyui": "^5.0.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.12.0",
    "react-loader-spinner": "^6.1.0",
    "react-loading-skeleton": "^3.4.0",
    "react-router-dom": "^5.3.4",
    "styled-components": "^6.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.2",
    "@types/react": "^18.2.41",
    "@types/react-dom": "^18.2.17",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "@vitest/ui": "^0.34.6",
    "autoprefixer": "^10.4.16",
    "happy-dom": "^12.10.3",
    "husky": "^9.1.1",
    "postcss": "^8.4.32",
    "tailwind-merge": "^1.14.0",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.3.2",
    "vite": "^5.0.4",
    "vite-tsconfig-paths": "^4.2.1",
    "vitest": "^0.34.6"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "4.9.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format && npm run lint",
      "pre-push": "npm run build"
    }
  }
}
