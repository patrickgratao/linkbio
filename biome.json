{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "tab",
    "indentWidth": 4,
    "lineWidth": 80
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "all": false
      },
      "correctness": {
        "noUnusedVariables": "warn",
        "useJsxKeyInIterable": "error",
        "useHookAtTopLevel": "off",
        "useExhaustiveDependencies": "off",
        "noUnreachable": "warn",
        "noVoidElementsWithChildren": "off"
      },
      "suspicious": {
        "noConsoleLog": "warn",
        "noExplicitAny": "off",
        "noArrayIndexKey": "off",
        "noImplicitAnyLet": "off"
      },
      "style": {
        "useEnumInitializers": "off",
        "noNonNullAssertion": "off",
        "useImportType": "off",
        "useSelfClosingElements": "off",
        "noUselessElse": "off"
      },
      "complexity": {
        "noStaticOnlyClass": "off"
      }
    }
  },
  "files": {
    "ignore": ["node_modules"]
  }
}
